CREATE DATABASE yungtattooing;
USE yungtattooing;
CREATE TABLE about (id INT NOT NULL AUTO_INCREMENT, text TEXT, PRIMARY KEY(id));
CREATE TABLE mywork (id INT NOT NULL AUTO_INCREMENT, picture VARCHAR(255), PRIMARY KEY(id));
CREATE TABLE recommendations (id INT NOT NULL AUTO_INCREMENT, client_name VARCHAR(255), client_picture VARCHAR(255), client_opinion TEXT, PRIMARY KEY(id));
